<div class="animated fadeInUp">


<div class="row">
    <div class="homepage-title">
      <div class="small-12 large-6 small-centered large-centered columns">
          <div class="content-box-form-title">
            <h1 class="homepage-title small-3 large-6 small-centered large-centered">Reserve a Teetime</h1>
          </div>
      </div>
    </div>
</div>
</div>
<br>

<div class="column text-center small-12 large-6 small-centered large-centered">
  <div class="teetimes-box">
    <p class = "teetime-show-subtitle"> On Course Weather: <%= @weather_summary %>, <%= @weather_temperature %>&deg;F </p><br>
  </div>
</div>
<br>
<br>

<%= form_for([@member, @teetime]) do |f| %>

<div class="animated fadeInUp">


<div class="row">
  <div class="column text-center small-12 large-6 small-centered large-centered">
    <div>
      <%= f.date_field :date, :placeholder => "Date (103093)", autofocus: true %>
    </div>

    <div>
      <%= f.time_field :time, :placeholder => "Time (1200)", autofocus: true %>
    </div>

    <div>
      <%= f.number_field :starting_hole, :placeholder => "Starting Hole", autofocus: true %>
    </div>

    <div class="custom-button">
        <%= f.label :unjoinable do %>
        <%= f.check_box :unjoinable, :id => "custom-checkbox" %>
        Make Private
        <% end %>
    </div>

    <div>
      <%= f.hidden_field :creator, :value => "#{current_member.last_name}, #{current_member.first_name}" %>
    </div>

    <div>
      <%= f.hidden_field :creator_id, :value => current_member.id %>
    </div>



    <div class="actions">
      <%= f.submit "Reserve", :class => 'custom-button' %>
    </div>
    <br>
    <br>
    <% end %>
  </div>
</div>


</div>
