
<div class="row">
    <div class="homepage-title">
      <div class="small-1 large-6 small-centered large-centered columns">
          <div class="content-box-form-title">
            <h1 class="homepage-title small-3 large-6 small-centered large-centered">Want to Register?</h1>
          </div>
      </div>
    </div>
</div>
<br>
<br>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
<div class="row">
  <div class="column text-center small-4 large-6 small-centered large-centered">
    <div>
      <%= f.text_field :first_name, :placeholder => "First Name", autofocus: true %>
    </div>

    <div>
      <%= f.text_field :last_name, :placeholder => "Last Name", autofocus: true %>
    </div>

    <div>
      <%= f.email_field :email, :placeholder => "Email", autofocus: true %>
    </div>

    <div>
      <%= f.text_field :member_number, :placeholder => "Member Number", autofocus: true %>
    </div>

    <div>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, placeholder: "Password", autocomplete: "off" %>
    </div>
    <div>
      <%= f.password_field :password_confirmation, :placeholder => "Confirm Password", autocomplete: "off" %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
    <br>
    <br>
    <% end %>
</div>
</div>
