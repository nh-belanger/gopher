<div class="row">
    <div class="homepage-title">
      <div class="small-12 large-6 small-centered large-centered columns">
          <div class="content-box-form-title">
            <h1 class="homepage-title small-3 large-6 small-centered large-centered">Edit Your Reservation</h1>
          </div>
      </div>
    </div>
</div>
<br>
<br>

<%= form_for([@member, @reservation]) do |f| %>

<div class="row">
  <div class="column text-center small-12 large-6 small-centered large-centered">

    <div>
      <%= f.select :room, [['Dining Room','dining room'],['Grille Room','grille room'],['Pub','pub']] %>
    </div>

    <div>
      <%= f.number_field :party_size, :placeholder => "party size", autofocus: true %>
    </div>

    <div>
      <%= f.date_field :date, :placeholder => "Date (103093)", autofocus: true %>
    </div>

    <div>
      <%= f.time_field :time, :placeholder => "Time (1200)", autofocus: true %>
    </div>

    <div class="actions">
      <%= f.submit "Save", :class => 'custom-button' %>
    </div>
    <div class="custom-button">
      <%= link_to 'Delete', member_reservation_path(@member, @reservation), data: {:confirm => 'Are you sure?'}, :method => :delete %>
    </div>
    <br>
    <br>
    <% end %>
  </div>
</div>
